{
  "openapi": "3.0.1",
  "info": {
    "title": "Water Tracker API",
    "version": "1.0.0",
    "description": "API documentation for Water Tracker application"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "The authentication managing API"
    },
    {
      "name": "User",
      "description": "The user managing API"
    },
    {
      "name": "Water",
      "description": "The water consumption managing API"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["Auth"],
        "consumes": ["multipart/form-data"],
        "produces": ["application/json"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              },
              "examples": {
                "user": {
                  "value": {
                    "username": "exampleuser",
                    "email": "user@example.com",
                    "password": "examplepassword",
                    "avatar": "<file>"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "id": "60d0fe4f5311236168a109ca",
                      "username": "exampleuser",
                      "email": "user@example.com",
                      "avatarURL": "http://localhost:3000/avatars/exampleuser.jpg"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login a user",
        "tags": ["Auth"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "user@example.com",
                    "password": "examplepassword"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                      "user": {
                        "id": "60d0fe4f5311236168a109ca",
                        "username": "exampleuser",
                        "email": "user@example.com"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Logout a user",
        "tags": ["Auth"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User logged out successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "message": "User logged out successfully"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/current": {
      "get": {
        "summary": "Get current user",
        "tags": ["User"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Current user retrieved successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "id": "60d0fe4f5311236168a109ca",
                      "username": "exampleuser",
                      "email": "user@example.com",
                      "avatarURL": "http://localhost:3000/avatars/exampleuser.jpg"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/setting": {
      "patch": {
        "summary": "Update user settings",
        "tags": ["User"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateSettings"
              },
              "examples": {
                "settings": {
                  "value": {
                    "email": "newemail@example.com",
                    "password": "newpassword"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User settings updated successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "id": "60d0fe4f5311236168a109ca",
                      "email": "newemail@example.com"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/avatars": {
      "patch": {
        "summary": "Update user avatar",
        "tags": ["User"],
        "consumes": ["multipart/form-data"],
        "produces": ["application/json"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAvatar"
              },
              "examples": {
                "avatar": {
                  "value": {
                    "avatarURL": "<file>"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User avatar updated successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "id": "60d0fe4f5311236168a109ca",
                      "avatarURL": "http://localhost:3000/avatars/newavatar.jpg"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/waterRate": {
      "patch": {
        "summary": "Update user water rate",
        "tags": ["User"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateWaterRate"
              },
              "examples": {
                "waterRate": {
                  "value": {
                    "waterRate": 3000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User water rate updated successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "waterRate": 3000
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/water": {
      "post": {
        "summary": "Create consumed water record",
        "tags": ["Water"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateConsumedWater"
              },
              "examples": {
                "water": {
                  "value": {
                    "amount": 500,
                    "date": "2024-06-04T12:00:00Z"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Consumed water record created successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "id": "60d0fe4f5311236168a109cb",
                      "amount": 500,
                      "date": "2024-06-04T12:00:00Z"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/water/{id}": {
      "patch": {
        "summary": "Update consumed water record",
        "tags": ["Water"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateConsumedWater"
              },
              "examples": {
                "water": {
                  "value": {
                    "amount": 600
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Consumed water record updated successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "id": "60d0fe4f5311236168a109cb",
                      "amount": 600
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete consumed water record",
        "tags": ["Water"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Consumed water record deleted successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "message": "Consumed water record deleted successfully"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
"/water/today": {
      "get": {
        "summary": "Get today's water consumption",
        "tags": ["Water"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Today's water consumption retrieved successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "totalAmount": 1500
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/water/{year}/{month}": {
      "get": {
        "summary": "Get monthly water consumption",
        "tags": ["Water"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "year",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 2024
            }
          },
          {
            "name": "month",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 6
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Monthly water consumption retrieved successfully",
            "content": {
              "application/json": {
                "examples": {
                  "response": {
                    "value": {
                      "totalAmount": 30000
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Register": {
        "type": "object",
        "required": ["username", "email", "password", "avatar"],
        "properties": {
          "username": {
            "type": "string",
            "example": "exampleuser"
          },
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "examplepassword"
          },
          "avatar": {
            "type": "string",
            "format": "binary"
          }
        }
      },
      "Login": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "examplepassword"
          }
        }
      },
      "UpdateSettings": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "newemail@example.com"
          },
          "password": {
            "type": "string",
            "example": "newpassword"
          }
        }
      },
      "UpdateAvatar": {
        "type": "object",
        "required": ["avatarURL"],
        "properties": {
          "avatarURL": {
            "type": "string",
            "format": "binary"
          }
        }
      },
      "UpdateWaterRate": {
        "type": "object",
        "required": ["waterRate"],
        "properties": {
          "waterRate": {
            "type": "integer",
            "example": 3000
          }
        }
      },
      "CreateConsumedWater": {
        "type": "object",
        "required": ["amount", "date"],
        "properties": {
          "amount": {
            "type": "integer",
            "example": 500
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "example": "2024-06-04T12:00:00Z"
          }
        }
      },
      "UpdateConsumedWater": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "integer",
            "example": 600
          }
        }
      }
    }
  }
}